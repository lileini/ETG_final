<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp" >

    <ImageView
        android:id="@+id/iv_item_culinary_photos"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_item_culinary_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_culinary_photos" 
        android:text="外婆心"/>

    <TextView
        android:id="@+id/tv_item_curlinary_avg_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_culinary_name"
        android:layout_toRightOf="@id/iv_item_culinary_photos" 
        android:text="人均价：100元"/>
     <TextView
        android:id="@+id/tv_item_curlinary_good_remarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_culinary_name"
        android:layout_toRightOf="@id/tv_item_curlinary_avg_price" 
        android:layout_marginLeft="16dp"
        android:text="好评：45人"/>
     <TextView
        android:id="@+id/tv_item_curlinary_all_remarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_culinary_name"
        android:layout_toRightOf="@id/tv_item_curlinary_good_remarks" 
        android:layout_marginLeft="16dp"
        android:text="总评评：55人"/>
     <TextView
        android:id="@+id/tv_item_curlinary_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_curlinary_avg_price"
        android:layout_toRightOf="@id/iv_item_culinary_photos" 
        android:text="地址：红牌楼东站"/>

</RelativeLayout>