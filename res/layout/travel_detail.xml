<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/detail_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#67AADC"
        >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/jiaruPLAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout_imageDetail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:onClick="jiaruPLAN"
        android:text="加入计划" />

    <TextView
        android:id="@+id/textView01"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/AltradionsDetialActivityimageView1"
        android:layout_marginLeft="10dp"
        android:text="详细地址： " />

    <TextView
        android:id="@+id/AltradionsDetialActivitytextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView01"
        android:layout_alignBottom="@+id/textView01"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textView01"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView02"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/AltradionsDetialActivitytextView2"
        android:layout_alignBottom="@+id/AltradionsDetialActivitytextView2"
        android:text="淡季/旺季时间： " />

    <TextView
        android:id="@+id/AltradionsDetialActivitytextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/AltradionsDetialActivitytextView1"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textView02"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView03"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignBaseline="@+id/AltradionsDetialActivitytextView3"
        android:layout_alignBottom="@+id/AltradionsDetialActivitytextView3"
        android:layout_marginLeft="10dp"
        android:text="推荐理由： " />
    <TextView
            android:id="@+id/AltradionsDetialActivitytextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/textView03"
            android:layout_below="@id/AltradionsDetialActivitytextView2"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/AltradionsDetialActivityimageView1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_launcher"
            android:onClick="image_onClick" />

        <LinearLayout
            android:id="@+id/LinearLayout_imageDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView03"
            android:orientation="vertical" >
        </LinearLayout>

</RelativeLayout>
</ScrollView>
